{
    "parser": "babel-eslint",
    "env": {
        "mocha": true,
        "node": true
    },
    "extends": "airbnb-base",
    "plugins": [
        "graphql"
    ],
    "rules": {
        "indent": ["error", 4],
        "max-len": ["error", {"code": 120, "tabWidth": 4, "ignoreUrls": true}],
        "no-underscore-dangle": ["error", { "allow": ["_id"] }],
        "import/no-extraneous-dependencies": "off",
        "no-param-reassign": ["error", { "props": false }]
    }    
}